# extras

<% if node["bash"]["user_type"] == "developer" %>
# This loads NVM if it exists
# Don't forget to alias your default version
if [ -d "$HOME/.nvm/" ]; then
  export NVM_DIR="$HOME/.nvm"
  [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
  [ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
  #  nvm alias default <%= node['bash']['nodejs']['version'] %>
  nvm use <%= node['bash']['nodejs']['version'] %>
fi

# This loads RVM if it exists
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" && rvm use <%= node['bash']['ruby']['version'] %>

# This loads sdk man if it exists
[[ -s "$HOME/.sdkman/bin/sdkman-init.sh" ]] && source "$HOME/.sdkman/bin/sdkman-init.sh"

# Direnv setup
command -v direnv >/dev/null 2>&1 && eval "$(direnv hook bash)"
<% end %>
